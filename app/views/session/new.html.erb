<%= form_tag( :session_create, :method => "post", :role=> "form" ) do %>

  <h1>Login</h1>

  <div class="container col-lg-3">
    <div class="form-group">
      <label for="email">Email</label>
      <%=  email_field_tag  :email, nil, {:class=>"form-control", :placeholder => "Email"} %>
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <%=  password_field_tag :password, nil, {:class=>"form-control", :placeholder => "Password"} %>
    </div>

    <div class="form-group">
      <br>
      <%= submit_tag "Login", :class=>"btn btn-primary" %> <%=link_to "Sign up", :new_user%>
    </div>
  </div>
<% end %>